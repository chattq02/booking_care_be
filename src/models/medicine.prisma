model Medicine {
  id           Int     @id @default(autoincrement())
  name         String  @db.VarChar(255)
  description  String? @db.VarChar(1000)
  unit         String? @db.VarChar(100)
  price        Float?
  stock        Int?
  usage        String? @db.VarChar(1000)
  manufacturer String? @db.VarChar(1000)

  // Quan hệ với cơ sở y tế
  facilityId Int
  facility   MedicalFacility @relation(fields: [facilityId], references: [id], onDelete: Cascade)

  // Quan hệ với items trong đơn thuốc
  items PrescriptionItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("medicines")
}
