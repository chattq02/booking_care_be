// =========================
// BẢNG CHI TIẾT THUỐC (PRESCRIPTION ITEM)
// =========================
model PrescriptionItem {
  // ID và khóa ngoại
  id             Int @id @default(autoincrement())
  prescriptionId Int
  medicineId     Int // Liên kết đến bảng master thuốc

  // Thông tin thuốc (có thể lấy từ Medicine hoặc override)
  medicineName String? // Tên thuốc (nếu muốn override tên từ master)
  brand        String? // Nhãn hiệu thuốc
  dosage       String? // Liều lượng dạng string (vd: "10mg")
  unit         String? // Đơn vị tính
  quantity     Int // Số lượng (số viên, chai, etc.)

  // Hướng dẫn sử dụng
  frequency   String? // Tần suất (vd: "2 lần/ngày")
  duration    String? // Thời gian dùng (vd: "7 ngày")
  mealTime    String? // Thời điểm uống (trước/sau ăn)
  instruction String? // Hướng dẫn sử dụng chi tiết
  note        String? // Ghi chú thêm

  // Thông tin đơn thuốc
  startDate String? // Ngày bắt đầu dùng
  endDate   String? // Ngày kết thúc dùng

  // Quan hệ
  prescription Prescription @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)
  medicine     Medicine     @relation(fields: [medicineId], references: [id])

  @@map("prescription_items")
}
