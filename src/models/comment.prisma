model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  authorId  Int
  author    User @relation(fields: [authorId], references: [id])
  
  postId    Int
  post      Post @relation(fields: [postId], references: [id])
  
  @@map("comments")
}