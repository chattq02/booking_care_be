model Department {
  id          Int     @id @default(autoincrement()) // Khóa chính
  name        String  // Tên chuyên khoa
  description String? // Mô tả thêm (nếu có)
  imageUrl    String? // Đường dẫn hình ảnh (nếu có)
  parentId    Int? // FK: Id chuyên khoa cha (nếu là chuyên khoa con)
  facilityId  Int? // FK: Cơ sở y tế trực thuộc

  // Quan hệ đệ quy
  parent         Department?  @relation("SubDepartments", fields: [parentId], references: [id], onDelete: Cascade)
  subDepartments Department[] @relation("SubDepartments") // Danh sách các chuyên khoa con

  doctors   User[]           @relation("DoctorDepartments") // Các bác sĩ thuộc chuyên khoa này (many-to-many)
  facility  MedicalFacility? @relation(fields: [facilityId], references: [id], onDelete: Cascade)
  schedules Schedule[]       @relation("DepartmentSchedules")

  createdAt DateTime @default(now()) // Ngày tạo
  updatedAt DateTime @updatedAt // Ngày cập nhật

  @@unique([name, facilityId])
  @@map("departments") // Map tên bảng trong DB
}
